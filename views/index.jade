       Placed at the end of the document so the pages load faster 
    script(src='js/jquery.js')
    script(src='js/bootstrap.min.js')
    script(src='js/jquery.scrollTo.js')
    script(src='js/jquery.nav.js')
    script(src='js/script.js')
